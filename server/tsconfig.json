{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist", "./node_modules"]
}
